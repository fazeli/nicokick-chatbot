{
  "name": "nicokick-chatbot-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx index.ts",
    "build": "npm run build:deps && npm run netlify:build",
    "build:deps": "npm install drizzle-orm @types/pg pg drizzle-zod zod nanoid --no-save",
    "build:tsc": "tsc -p tsconfig.json", 
    "build:copy-shared": "mkdir -p dist/shared && cp -r ../shared/* dist/shared/",
    "netlify:build": "mkdir -p dist && node netlify-build.js",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.6.0",
    "@xenova/transformers": "^2.7.0",
    "connect-pg-simple": "^9.0.1",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "memorystore": "^1.6.7",
    "nanoid": "^5.0.4",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "serverless-http": "^3.2.0",
    "zod": "^3.22.4",
    "zod-validation-error": "^1.5.0"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.9.2",
    "@types/passport": "^1.0.15",
    "@types/passport-local": "^1.0.38",
    "drizzle-kit": "^0.19.13",
    "tsx": "^4.1.2",
    "typescript": "^5.2.2"
  }
}