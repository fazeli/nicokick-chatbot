{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "allowJs": true,
    "noEmit": false,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "netlify/functions/**/*.ts",
    "services/**/*.ts",
    "admin/**/*.ts",
    "data/**/*.ts",
    "storage.ts",
    "routes.ts",
    "../shared/schema.ts"
  ],
  "exclude": ["node_modules", "dist", "vite.ts", "../vite.config.ts"]
}